    <script>window.jQuery || document.write('<script src="js/jquery-1.9.1.min.js"><\/script>')</script>
    <script src="JS/bootstrap.js"></script>
    <script src="JS/placeholder-shim.js"></script>
    <script src="JS/custom.js"></script>*@









</body>
</html>
